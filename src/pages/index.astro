---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Inicio de Sesión | AgroScan AI">
  <section class="flex flex-col md:flex-row w-full h-screen bg-[#1E1E1E]">
    <!-- Formulario de inicio de sesión -->
    <div class="w-full md:w-1/2 flex flex-col text-white justify-center px-6 md:px-10 lg:px-20 py-10 md:py-0 gap-8">
      <!-- Logo -->
      <div class="flex items-center gap-3 mb-4">
        <img src="/images/logo.svg" alt="AgroScan AI Logo" class="w-10 h-10" />
        <h2 class="text-xl font-semibold text-white">AgroScan AI</h2>
      </div>
      
      <h1 class="font-bold text-3xl md:text-4xl lg:text-5xl">INICIO DE SESION</h1>
      
      <form class="flex flex-col gap-6 w-full max-w-md">
        <!-- Nombre de Usuario -->
        <div class="flex flex-col gap-2">
          <label for="username" class="text-sm pl-2">Nombre de Usuario</label>
          <input 
            type="text" 
            id="username"
            placeholder="Ingresa tu nombre de usuario" 
            class="px-4 py-3 text-sm rounded-2xl w-full bg-[#262626] border-none focus:outline-none focus:ring-2 focus:ring-blue-500" 
            name="username"
            required
          />
        </div>
        
        <!-- Contraseña -->
        <div class="flex flex-col gap-2">
          <div class="flex justify-between items-center pl-2">
            <label for="password" class="text-sm">Contraseña</label>
            <a href="#" class="text-sm text-gray-400 hover:text-white transition-colors">Recuperar contraseña</a>
          </div>
          <input 
            type="password" 
            id="password"
            placeholder="Ingresa tu contraseña" 
            class="px-4 py-3 text-sm rounded-2xl w-full bg-[#262626] border-none focus:outline-none focus:ring-2 focus:ring-blue-500" 
            name="password"
            required
          />
        </div>
        
        <!-- Botón de inicio de sesión -->
        <button 
          type="submit" 
          class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-2xl mt-4 transition-colors"
        >
          INICIAR SESION
        </button>
        
        <!-- Crear cuenta -->
        <div class="text-center mt-2">
          <a href="/registro" class="text-gray-400 hover:text-white transition-colors">Crear una cuenta</a>
        </div>
      </form>
    </div>
    
    <!-- Imagen lateral y texto -->
    <div class="hidden md:block w-1/2 relative overflow-hidden">
      <img 
        src="/images/login.png" 
        class="w-full h-full object-cover" 
        alt="Campo agrícola"
      />
      <div class="absolute inset-0 bg-black/30 flex flex-col justify-center p-10 text-white">
        <p class="text-3xl lg:text-4xl font-light text-right">
          Detecta temprano,<br />
          produce mejor<br />
          con <span class="font-bold">AgroScan</span>
        </p>
      </div>
    </div>
  </section>
</Layout>