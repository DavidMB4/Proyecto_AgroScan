---
import { theme } from "tailwind.config";
import Layout from "../layouts/Layout.astro";
import { dark } from '@clerk/themes'
import { SignUp } from "@clerk/astro/components";
---

<Layout title="Registro | AgroScan AI">
  <section class="flex flex-col md:flex-row w-full min-h-screen bg-[#1E1E1E]">
    <div class="hidden md:block md:w-1/2 lg:w-3/5 relative overflow-hidden">
      <img 
        src="/images/registro.png" 
        class="w-full h-full object-cover absolute inset-0" 
        alt="Campo agrícola"
      />
      <div class="absolute inset-0 bg-black/30 flex flex-col justify-center p-6 sm:p-8 md:p-10 lg:p-16 text-white">
        <!-- Logo -->
        <div class="flex items-center gap-3 mb-6 md:mb-10">
          <img src="/images/logo.svg" alt="AgroScan AI Logo" class="w-8 h-8 md:w-10 md:h-10" />
          <h2 class="text-lg md:text-xl font-semibold text-white">AgroScan AI</h2>
        </div>
        
        <p class="text-2xl sm:text-3xl md:text-3xl lg:text-4xl xl:text-5xl font-light">
          Da el primer paso hacia<br />
          una <span class="font-bold">agricultura<br />
          inteligente</span>.
        </p>
      </div>
    </div>
    
    
    <div class="w-full md:w-1/2 lg:w-2/5 flex flex-col text-white justify-center items-center px-4 sm:px-6 md:px-8 lg:px-12 xl:px-20 py-8 md:py-0 gap-6 md:gap-8 bg-[#1E1E1E]">

      <div class="flex items-center justify-center md:justify-start gap-3 mb-6 md:hidden">
        <img src="/images/logo.svg" alt="AgroScan AI Logo" class="w-10 h-10" />
        <h2 class="text-xl font-semibold text-white">AgroScan AI</h2>
      </div>
      
      <SignUp
        appearance={{
          baseTheme: dark,
      }}>

      </SignUp>
    </div>
  </section>
</Layout>

<style>
  /* Soporte para pantallas extra pequeñas */
  @media (min-width: 400px) {
    .xs\:flex-row {
      flex-direction: row;
    }
  }
  
  /* Asegura que el formulario no se estire demasiado en pantallas grandes */
  @media (min-width: 1600px) {
    section {
      max-width: 1600px;
      margin: 0 auto;
      box-shadow: 0 0 50px rgba(0, 0, 0, 0.3);
    }
  }
  
  /* Ajuste de altura para pantallas muy pequeñas */
  @media (max-height: 600px) {
    section {
      min-height: 100vh;
      height: auto;
      padding: 2rem 0;
    }
  }
</style>