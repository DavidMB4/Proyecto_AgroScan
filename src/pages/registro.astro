---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Registro | AgroScan AI">
  <section class="flex flex-col md:flex-row w-full min-h-screen bg-[#1E1E1E]">
    <div class="hidden md:block md:w-1/2 lg:w-3/5 relative overflow-hidden">
      <img 
        src="/images/registro.png" 
        class="w-full h-full object-cover absolute inset-0" 
        alt="Campo agrícola"
      />
      <div class="absolute inset-0 bg-black/30 flex flex-col justify-center p-6 sm:p-8 md:p-10 lg:p-16 text-white">
        <!-- Logo -->
        <div class="flex items-center gap-3 mb-6 md:mb-10">
          <img src="/images/logo.svg" alt="AgroScan AI Logo" class="w-8 h-8 md:w-10 md:h-10" />
          <h2 class="text-lg md:text-xl font-semibold text-white">AgroScan AI</h2>
        </div>
        
        <p class="text-2xl sm:text-3xl md:text-3xl lg:text-4xl xl:text-5xl font-light">
          Da el primer paso hacia<br />
          una <span class="font-bold">agricultura<br />
          inteligente</span>.
        </p>
      </div>
    </div>
    
    
    <div class="w-full md:w-1/2 lg:w-2/5 flex flex-col text-white justify-center items-center px-4 sm:px-6 md:px-8 lg:px-12 xl:px-20 py-8 md:py-0 gap-6 md:gap-8 bg-[#1E1E1E]">

      <div class="flex items-center justify-center md:justify-start gap-3 mb-6 md:hidden">
        <img src="/images/logo.svg" alt="AgroScan AI Logo" class="w-10 h-10" />
        <h2 class="text-xl font-semibold text-white">AgroScan AI</h2>
      </div>
      
      <h1 class="font-bold text-xl sm:text-2xl md:text-3xl lg:text-4xl text-center md:text-left">CREAR UNA CUENTA</h1>
      
      <form class="flex flex-col gap-10 md:gap-6 w-full max-w-md mx-auto md:mx-0">
        <!--Nombre(s) -->
        <div class="flex flex-col gap-2">
            <label for="nombre" class="text-sm pl-2">Nombre(s)</label>
            <input 
              type="text" 
              id="nombre"
              placeholder="Ingresa tu(s) nombre(s)" 
              class="px-4 py-3 text-sm rounded-2xl w-full bg-[#262626] border-none focus:outline-none focus:ring-2 focus:ring-blue-500" 
              name="nombre"
              required
            />
          </div>
          
          <!-- Apellido(s) -->
          <div class="flex flex-col gap-2">
            <label for="apellido" class="text-sm pl-2">Apellido(s)</label>
            <input 
              type="text" 
              id="apellido"
              placeholder="Ingresa tu(s) apellido(s)" 
              class="px-4 py-3 text-sm rounded-2xl w-full bg-[#262626] border-none focus:outline-none focus:ring-2 focus:ring-blue-500" 
              name="apellido"
              required
            />
          </div>
        
        <!-- Contraseña -->
        <div class="flex flex-col gap-2">
          <label for="password" class="text-sm pl-2">Contraseña</label>
          <input 
            type="password" 
            id="password"
            placeholder="Ingresa una contraseña" 
            class="px-4 py-3 text-sm rounded-2xl w-full bg-[#262626] border-none focus:outline-none focus:ring-2 focus:ring-blue-500" 
            name="password"
            required
          />
          <p class="text-xs text-gray-400 pl-2 mt-1">Mínimo 8 caracteres, incluyendo una letra mayúscula y un número</p>
        </div>
        
        <!-- Correo Electrónico -->
        <div class="flex flex-col gap-2">
          <label for="email" class="text-sm pl-2">Correo Electrónico</label>
          <input 
            type="email" 
            id="email"
            placeholder="Ingresa un correo electrónico" 
            class="px-4 py-3 text-sm rounded-2xl w-full bg-[#262626] border-none focus:outline-none focus:ring-2 focus:ring-blue-500" 
            name="email"
            required
          />
        </div>
        
        <!-- Términos y condiciones -->
        <div class="flex items-start gap-2 mt-1">
          <input 
            type="checkbox" 
            id="terms" 
            class="mt-1 rounded bg-[#262626] border-none text-blue-600 focus:ring-blue-500 focus:ring-offset-0"
            required
          />
          <label for="terms" class="text-xs sm:text-sm text-gray-300">
            Acepto los <a href="#" class="text-blue-400 hover:underline">términos y condiciones</a> y la <a href="#" class="text-blue-400 hover:underline">política de privacidad</a>
          </label>
        </div>
        
        <!-- Botoness -->
        <div class="flex flex-col xs:flex-row gap-3 sm:gap-4 mt-2 sm:mt-4">
          <button 
            type="submit" 
            class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-2xl transition-colors flex-1 text-sm sm:text-base"
          >
            CREAR CUENTA
          </button>
          
          <a 
            href="/login" 
            class="text-center py-3 px-4 rounded-2xl border border-gray-600 hover:bg-gray-800 transition-colors flex-1 text-sm sm:text-base"
          >
            Cancelar
          </a>
        </div>
        
        <!-- Ya tienes cuenta -->
        <div class="text-center mt-2">
          <p class="text-xs sm:text-sm text-gray-400">
            ¿Ya tienes una cuenta? <a href="/login" class="text-blue-400 hover:underline">Iniciar sesión</a>
          </p>
        </div>
      </form>
    </div>
  </section>
</Layout>

<style>
  /* Soporte para pantallas extra pequeñas */
  @media (min-width: 400px) {
    .xs\:flex-row {
      flex-direction: row;
    }
  }
  
  /* Asegura que el formulario no se estire demasiado en pantallas grandes */
  @media (min-width: 1600px) {
    section {
      max-width: 1600px;
      margin: 0 auto;
      box-shadow: 0 0 50px rgba(0, 0, 0, 0.3);
    }
  }
  
  /* Ajuste de altura para pantallas muy pequeñas */
  @media (max-height: 600px) {
    section {
      min-height: 100vh;
      height: auto;
      padding: 2rem 0;
    }
  }
</style>